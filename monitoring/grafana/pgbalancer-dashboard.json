{
  "dashboard": {
    "title": "pgbalancer Monitoring Dashboard",
    "tags": ["pgbalancer", "postgresql", "database"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "pgbalancer Status",
        "type": "stat",
        "targets": [
          {
            "expr": "pgbalancer_up",
            "legendFormat": "Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 0, "text": "DOWN", "color": "red"},
              {"value": 1, "text": "UP", "color": "green"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Backend Nodes Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pgbalancer_backend_up)",
            "legendFormat": "Up Backends"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Active Processes",
        "type": "gauge",
        "targets": [
          {
            "expr": "pgbalancer_process_active / pgbalancer_process_total",
            "legendFormat": "Utilization"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.9, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Connection Pool Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(pgbalancer_pool_connections_active) / sum(pgbalancer_pool_connections_total)",
            "legendFormat": "Pool Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.95, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Query Rate (QPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(pgbalancer_backend_queries_total[1m]))",
            "legendFormat": "Total QPS"
          },
          {
            "expr": "sum(rate(pgbalancer_backend_queries_total[1m])) by (node_id)",
            "legendFormat": "Node {{node_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "yaxes": [
          {"format": "qps", "label": "Queries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Backend Load Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "pgbalancer_backend_queries_total",
            "legendFormat": "Node {{node_id}} - {{hostname}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "yaxes": [
          {"format": "short", "label": "Total Queries"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Connection Pool Statistics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pgbalancer_pool_connections_total",
            "legendFormat": "Total Pool Size"
          },
          {
            "expr": "pgbalancer_pool_connections_active",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pgbalancer_pool_connections_idle",
            "legendFormat": "Idle Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Replication Lag (seconds)",
        "type": "graph",
        "targets": [
          {
            "expr": "pgbalancer_backend_replication_lag_seconds",
            "legendFormat": "Node {{node_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "yaxes": [
          {"format": "s", "label": "Lag (seconds)"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [60], "type": "gt"},
              "query": {"model": "A"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "Backend Status Timeline",
        "type": "state-timeline",
        "targets": [
          {
            "expr": "pgbalancer_backend_up",
            "legendFormat": "Node {{node_id}} - {{hostname}}"
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 20},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 0, "text": "DOWN", "color": "red"},
              {"value": 1, "text": "UP", "color": "green"}
            ]
          }
        }
      },
      {
        "id": 10,
        "title": "Failover Events",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(pgbalancer_failover_total[5m])",
            "legendFormat": "Failovers (5m)"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 26},
        "alert": {
          "name": "Failover Detected",
          "conditions": [
            {
              "evaluator": {"params": [0], "type": "gt"},
              "query": {"model": "A"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 11,
        "title": "Watchdog Status",
        "type": "stat",
        "targets": [
          {
            "expr": "pgbalancer_watchdog_state",
            "legendFormat": "State"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 0, "text": "DOWN", "color": "red"},
              {"value": 1, "text": "LOADING", "color": "yellow"},
              {"value": 2, "text": "JOINING", "color": "yellow"},
              {"value": 3, "text": "INITIALIZING", "color": "yellow"},
              {"value": 4, "text": "LEADER", "color": "green"},
              {"value": 5, "text": "STANDBY", "color": "blue"}
            ]
          }
        },
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 26}
      }
    ]
  }
}

